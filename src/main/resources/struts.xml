<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.enable.DynamicMethodInvocation" value="true"/>
    <constant name="struts.mapper.action.prefix.enabled" value="true"/>

    <package name="stock-management" extends="struts-default">
        <interceptors>
            <interceptor name="isLogin" class="es.ayozehp.stock.management.InterceptorLogin"/>
            <interceptor name="isAdmin" class="es.ayozehp.stock.management.InterceptorIsAdmin"/>
            <interceptor name="isWarehouse" class="es.ayozehp.stock.management.InterceptorIsWarehouse"/>
            <interceptor name="isClient" class="es.ayozehp.stock.management.InterceptorIsClient"/>
        </interceptors>

        <action name="home" class="es.ayozehp.stock.management.action.HomeAction" method="execute">
            <result>/index.jsp</result>
        </action>

        <action name="login" class="es.ayozehp.stock.management.action.LoginAction" method="execute">
            <result name="success" type="redirectAction">users</result>
            <result name="error" type="redirectAction">home</result>
        </action>

        <action name="logout" class="es.ayozehp.stock.management.action.LogoutAction" method="execute">
            <result name="success" type="redirectAction">home</result>
        </action>

        <action name="users" class="es.ayozehp.stock.management.action.user.ListUserAction" method="execute">
            <interceptor-ref name="isLogin"/>
            <interceptor-ref name="isAdmin"/>
            <result name="success">/users/list.jsp</result>
            <result name="error" type="redirectAction">home</result>
        </action>

        <action name="viewCreateUser" class="es.ayozehp.stock.management.action.user.CreateUserAction" method="input">
            <interceptor-ref name="isLogin"/>
            <interceptor-ref name="isAdmin"/>
            <result name="success">/users/create.jsp</result>
            <result name="error" type="redirectAction">home</result>
        </action>

        <action name="createUser" class="es.ayozehp.stock.management.action.user.CreateUserAction" method="execute">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="isLogin"/>
            <interceptor-ref name="isAdmin"/>
            <result name="success" type="redirectAction">users</result>
            <result name="error" type="redirectAction">home</result>
        </action>

        <action name="viewEditUser" class="es.ayozehp.stock.management.action.user.EditUserAction" method="input">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="isLogin"/>
            <interceptor-ref name="isAdmin"/>
            <result name="success">/users/edit.jsp</result>
            <result name="error" type="redirectAction">home</result>
        </action>

        <action name="editUser" class="es.ayozehp.stock.management.action.user.EditUserAction" method="execute">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="isLogin"/>
            <interceptor-ref name="isAdmin"/>
            <result name="success" type="redirectAction">users</result>
            <result name="error" type="redirectAction">home</result>
        </action>

        <action name="deleteUser" class="es.ayozehp.stock.management.action.user.DeleteUserAction" method="execute">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="isLogin"/>
            <interceptor-ref name="isAdmin"/>
            <result name="success">/users/delete.jsp</result>
            <result name="error" type="redirectAction">home</result>
        </action>
    </package>
</struts>